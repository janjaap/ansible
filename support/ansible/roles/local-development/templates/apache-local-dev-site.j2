<VirtualHost *:80>
    ServerName {{ vhost_server_name }}
	SetEnv APP_ENV dev

	DocumentRoot {{ dev_projects }}

	AccessFileName .htaccess.dev .htaccess

	<Directory {{ dev_projects }}/>
		Options Indexes FollowSymLinks MultiViews
		AllowOverride All
		Order allow,deny
		allow from all
	</Directory>
</VirtualHost>
