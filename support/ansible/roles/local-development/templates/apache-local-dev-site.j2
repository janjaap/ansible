<VirtualHost *:80>
    ServerName {{ vhost_server_name }}
	SetEnv APP_ENV dev

	DocumentRoot {{ app_root }}

	AccessFileName .htaccess.dev .htaccess

	<Directory {{ app_root }}/>
		Options Indexes FollowSymLinks MultiViews
		AllowOverride All
		Order allow,deny
		allow from all
	</Directory>
</VirtualHost>
